pipeline {
    agent {
        docker {
            image 'python:3.6'
            args '--user root'
        }
    }
    stages {
         stage('Prepare git env'){
             steps{
                 sh "git config --global user.email 'jenkins-core@kisio.com'"
                 sh "git config --global user.name 'jenkins core'"
                 sh "git tag -l | xargs git tag -d"
             }
         }
        stage('Install extra packages'){
            steps {
                sh '''
                    pip install git+git://github.com/CanalTP/githubflow_release.git@cc5cc83da7ef4f290cadf46ed6a11601dd15fa9c --force
                '''
            }
        }
        stage('Create and push new version'){
            steps {
                withCredentials([string(credentialsId: 'jenkins-core-github-access-token', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        githubflow_release --release-type $release_type --base-branch master --github-repo CanalTP/forseti  --remote-name origin
                        git push https://jenkins-kisio-core:$GITHUB_TOKEN@@github.com/CanalTP/forseti.git master release --tags
                    '''
                }
            }
        }
    }
}
